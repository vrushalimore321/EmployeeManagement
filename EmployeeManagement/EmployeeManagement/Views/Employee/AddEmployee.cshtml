﻿
@model EmployeeModels.ViewModel.EmployeeDetailView
@{
    ViewBag.Title = "AddEmployee";
}

<h2>Add Employee</h2>

@using (Html.BeginForm("AddEmployee", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @* @Html.AntiForgeryToken() *@

    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" ,id = "nameInput" })
        @Html.ValidationMessageFor(model => model.Name, "Name is required", new { @class = "text-danger", id = "nameError" })
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>  @* This line includes the jQuery library from a CDN (Content Delivery Network). *@
    <script>
        $(document).ready(function () {
            $('#nameInput').on('blur', function () {
                if ($(this).val() !== '') {
                    $('#nameError').hide(); // Hide error message if name is not empty
                }
            });
        });
    </script>

    <div class="form-group">
        @Html.LabelFor(model => model.DesignationId)
        @Html.DropDownListFor(model => model.DesignationId, ViewBag.Designations as SelectList, "Select designations", new { @class = "form-control", id = "designationDropdown" })
        @Html.ValidationMessageFor(model => model.DesignationId, "Please select the Designation", new { @class = "text-danger", id = "designationError", style = "display: none;" }) <!-- Hide error message initially -->
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#btnsave').on('click', function (e) {
                var selectedDesignation = $('#designationDropdown').val();
                if (selectedDesignation === '') {
                    e.preventDefault(); // Prevent form submission
                    $('#designationError').show(); // Show error message
                } else {
                    $('#designationError').hide(); // Hide error message if a designation is selected
                }
            });
        });
    </script>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#designationDropdown').on('change', function () {
            if ($(this).val() !== '') {
                    $('#designationError').hide(); // Hide error message if a designation is selected
            }
        });
    });
</script>

    <div class="form-group">
        @Html.LabelFor(model => model.ProfilePicture)
        <input type="file" name="ImageFile" id="fileName" onchange="validateFileType()" onclick="validateFileType();" required class="form-control" accept="image/gif,image/jpg,image/jpeg,image/png" />
        <!-- Empty img tag for image preview -->
        <img id="imagePreview" src="#" alt="Profile Picture" style="display: none; max-width: 100px; max-height: 100px;" />
        <script type="text/javascript">
            function validateFileType() {
                var fileInput = document.getElementById('fileName');
                var file = fileInput.files[0];
                var imageType = /image.*/;

                // Check if file is an image
                if (file.type.match(imageType)) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        var imagePreview = document.getElementById('imagePreview');
                        imagePreview.src = e.target.result;
                        imagePreview.style.display = 'block'; // Display the image preview
                    }

                    reader.readAsDataURL(file);
                } else {
                    alert("Only jpg/jpeg and png files are allowed!");
                }
            }
        </script>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Salary)
        @Html.TextBoxFor(model => model.Salary, new { @class = "form-control", id = "salaryInput" })
        @Html.ValidationMessageFor(model => model.Salary, "Enter the Salary", new { @class = "text-danger" })
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#salaryInput').on('input', function () {
                if ($(this).val().trim() !== '' && parseFloat($(this).val().trim()) >= 0) {
                    $('#salaryInput').removeClass('input-validation-error'); // Remove validation error styling
                    $('#salaryInput').next('.text-danger').text(''); // Clear the error message
                }
            });
        });
    </script>

    <div class="form-group">
        @Html.LabelFor(model => model.DateOfBirth)
        @Html.TextBoxFor(model => model.DateOfBirth, "{0:yyyy-MM-dd}", new { @class = "form-control datepicker" })
        @Html.ValidationMessageFor(model => model.DateOfBirth)
    </div>

   <div class="form-group">
    @Html.LabelFor(model => model.Email)
    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", id = "Email" })
    <span id="emailError" class="text-danger"></span>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
    $('#Email').on('input', function () {
        var email = $(this).val();
        if (!isValidEmail(email)) {
            $('#emailError').text('Invalid email address');
        } else {
            $('#emailError').text('');
        }
    });

    function isValidEmail(email) {
                var pattern = /^[a-zA-Z0-9._%+-]+@("@")[a-zA-Z0-9.-]+[a-zA-Z0-9.-]+\.[a-zA-Z]{2,}$/;
        return pattern.test(email);
    }
    
    // Clear error message when input is valid
    $('#Email').on('input', function () {
        var email = $(this).val();
        if (isValidEmail(email)) {
            $('#emailError').text('');
        }
    });
});

</script>


    <div class="form-group">
        @Html.LabelFor(model => model.Address)
        @Html.TextAreaFor(model => model.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Address)
    </div>

    <div class="form-group">
        <input type="submit" value="AddEmployee" class="btn btn-primary" id="btnsave" />
    </div>
   


